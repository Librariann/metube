extends layouts/main

block content
    .video-detail__container
        .video__player
            video(src=`${videoDetailInfo.fileUrl}`)
        .video__info
            a(href=routes.editVideo(videoDetailInfo.id))
                button Edit video
            h5.video__title=videoDetailInfo.title
            p.video__description=videoDetailInfo.description
            if videoDetailInfo.views === 1
                span.video__views 1 view
            else 
                span.video__views #{videoDetailInfo.views} views
        .video__comments
            if videoDetailInfo.comments.length === 1
                span.video__comment-number 1 comment
            else
                span.video__comment-number #{videoDetailInfo.comments.length} comments